docker pull mysql

# start container with mysql server
docker run -d --name spawning-pool -e MYSQL_ROOT_PASSWORD=Kerrigan -e MYSQL_DATABASE=zerglings --restart=always -v hatchery:/var/lib/mysql mysql --default-authentication-plugin=mysql_native_password

